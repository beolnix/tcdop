<?xml version="1.0"?>
<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.3"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.3 http://maven.apache.org/xsd/assembly-1.1.3.xsd">
    <id>plugin-assembly</id>
    <includeBaseDirectory>false</includeBaseDirectory>
    <formats>
        <format>zip</format>
    </formats>

    <files>
        <file>
            <source>${basedir}/src/main/server-config/teamcity-plugin.xml</source>
            <outputDirectory>/</outputDirectory>
        </file>
        <file>
            <source>target/tcdop-agent.zip</source>
            <outputDirectory>agent</outputDirectory>
        </file>
    </files>

    <moduleSets>
        <moduleSet>
            <useAllReactorProjects>true</useAllReactorProjects>
            <includes>
                <include>io.cyberstock:tcdop-server</include>
                <include>io.cyberstock:tcdop-model</include>
                <include>io.cyberstock:tcdop-util</include>
            </includes>
            <binaries>
                <outputDirectory>server</outputDirectory>
                <unpack>false</unpack>
                <dependencySets>
                    <dependencySet>
                        <includes>
                            <include>*</include>
                        </includes>
                    </dependencySet>
                </dependencySets>
            </binaries>
        </moduleSet>
    </moduleSets>
</assembly>

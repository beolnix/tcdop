<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd"

       default-autowire="constructor">

    <import resource="classpath:/META-INF/utils-context.xml"/>

    <!-- core plugin services -->
    <bean id="DOClientFactory" class="io.cyberstock.tcdop.server.integration.digitalocean.DOAsyncClientServiceFactory"/>

    <bean id="TCDOPExecutorService" class="java.util.concurrent.Executors" factory-method="newFixedThreadPool">
        <constructor-arg value="${tcdop.internalFixedThreadpool.size}"/>
    </bean>

    <!-- integration with TeamCity -->
    <bean id="TCCloudClientFactory" class="io.cyberstock.tcdop.server.integration.teamcity.TCCloudClientFactory"/>

</beans>
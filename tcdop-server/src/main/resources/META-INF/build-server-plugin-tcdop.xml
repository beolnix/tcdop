<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd"

       default-autowire="constructor">

    <!-- core plugin services -->
    <bean id="DOCloudClientFactory" class="io.cyberstock.tcdop.server.DOCloudClientFactory"/>


    <!-- utils -->
    <bean id="propertiesReader" class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
        <property name="locations">
            <list>
                <value>classpath:/tcdop.properties</value>
                <!-- add more here if it is required -->
                <!--<value>classpath:/...</value>-->
            </list>
        </property>
    </bean>

    <bean id="messageSource"
          class="org.springframework.context.support.ResourceBundleMessageSource">
        <property name="basename" value="i18n/tcdop-messages" />
        <property name="defaultEncoding" value="UTF-8" />
    </bean>

    <bean id="messagesHelper" class="io.cyberstock.tcdop.util.DOMessagesHelper">
        <constructor-arg ref="messageSource"/>
    </bean>

</beans>
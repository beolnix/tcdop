<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="propertiesReader" class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
        <property name="locations">
            <list>
                <value>classpath:/tcdop.properties</value>
                <!-- add more here if it is required -->
                <!--<value>classpath:/...</value>-->
            </list>
        </property>
    </bean>

    <!-- core plugin services -->
    <bean id="DOClientFactory" class="io.cyberstock.tcdop.server.integration.digitalocean.DOAsyncClientServiceFactory">
        <constructor-arg ref="TCDOPExecutorService"/>
    </bean>

    <bean id="TCDOPExecutorService" class="java.util.concurrent.Executors" factory-method="newFixedThreadPool">
        <constructor-arg value="${tcdop.internalFixedThreadpool.size}"/>
    </bean>

</beans>